FROM registry.fedoraproject.org/fedora-toolbox:43

RUN sed -i "s/enabled=1/enabled=0/" /etc/yum.repos.d/fedora-cisco-openh264.repo && \
    dnf --assumeyes install \
        adw-gtk3-theme \
    && \
    dnf --assumeyes install \
        ripgrep \
        fd-find \
    && \
    dnf --assumeyes install \
        cmake \
        gnome-screenshot \
        go \
        gopls \
        hunspell \
        hunspell-en-US \
        hunspell-fr \
        libtool \
        nodejs-bash-language-server \
        nodejs-npm \
        pandoc \
        shfmt \
        wl-clipboard \
    && \
    dnf clean all
