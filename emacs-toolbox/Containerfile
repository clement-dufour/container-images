FROM registry.fedoraproject.org/fedora-toolbox:44

RUN sed -i "s/enabled=1/enabled=0/" /etc/yum.repos.d/fedora-cisco-openh264.repo && \
    dnf --assumeyes install \
        adw-gtk3-theme \
        flatpak-xdg-utils \
    && \
    dnf --assumeyes install \
        emacs-pgtk \
        ripgrep \
        fd-find \
    && \
    dnf --assumeyes install \
        cmake \
        go \
        gopls \
        hunspell \
        hunspell-en-US \
        hunspell-fr \
        libtool \
        nodejs-bash-language-server \
        nodejs-npm \
        pandoc \
        shfmt \
        wl-clipboard \
    && \
    sudo ln -sf /usr/bin/flatpak-xdg-open /usr/bin/xdg-open && \
    dnf clean all
