FROM registry.fedoraproject.org/fedora-toolbox:45

RUN sed -i "s/enabled=1/enabled=0/" /etc/yum.repos.d/fedora-cisco-openh264.repo && \
    dnf --assumeyes install \
        adw-gtk3-theme \
        flatpak-xdg-utils \
    && \
    dnf --assumeyes install \
        fzf \
        mpv \
        stow \
    && \
    sudo ln -sf /usr/bin/flatpak-xdg-open /usr/bin/xdg-open && \
    dnf clean all
